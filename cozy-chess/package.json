{
  "name": "cozy-chess",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "description": "Cozy Chess â€“ Electron + React desktop app using Rodent/PizzaRAT as the chess engine.",
  "scripts": {
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "vite build",
    "preview": "vite preview",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "chess.js": "^1.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "concurrently": "^9.0.0",
    "electron": "^32.1.0",
    "electron-builder": "^25.0.0",
    "typescript": "^5.6.2",
    "vite": "^5.4.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.pizzarat.cozychess",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "dist/**/*"
    ],
    "extraResources": [
      {
        "from": "../characters",
        "to": "characters"
      },
      {
        "from": "../PizzaRAT.exe",
        "to": "PizzaRAT.exe"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ]
    }
  }
}


